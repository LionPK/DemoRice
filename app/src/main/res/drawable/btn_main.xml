<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#00cc52" />
            <gradient android:angle="-90" android:startColor="#00cc52" android:endColor="#00cc52" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#00b248" />
            <gradient android:angle="-90" android:startColor="#00b248" android:endColor="#00b248" />
        </shape>
    </item>

</selector>